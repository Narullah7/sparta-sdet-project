<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title> <%= @title %> </title>
  </head>
  <body>
    <%= erb(:'partials/navigation', :layout => false) %>
    <br />

    <% flash.keys.each do |type| %>
      <div data-alert class="flash <%= type %> alert-box radius">
        <%= flash[type] %>
        <a href="#" class="close">&times;</a>
      </div>
    <% end %>

    <%= yield %>

  </body>
</html>
